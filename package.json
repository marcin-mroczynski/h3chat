{
  "name": "h3chat",
  "version": "1.0.0",
  "description": "Local H3 chat application using geolocation",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "start:prod": "set NODE_ENV=production && node server.js",
    "dev": "nodemon server.js",
    "dev:client": "cd client && npm run dev -- --port 5173 --host",
    "dev:both": "start-dev.bat",
    "dev:server": "nodemon server.js",
    "kill": "kill-ports.bat",
    "build": "cd client && npm run build",
    "build:start": "npm run build && npm run start:prod"
  },
  "dependencies": {
    "express": "^4.18.0",
    "h3-js": "^4.1.0",
    "nanoid": "^3.3.0",
    "ws": "^8.14.0"
  },
  "keywords": [
    "chat",
    "h3",
    "geolocation",
    "websocket"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "nodemon": "^3.1.10"
  }
}
